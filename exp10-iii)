#include <iostream>
using namespace std;

template <class T>
T func(T a[], int n) {
    T sum = 0;
    for (int i = 0; i < n; i++) {
        sum = sum + a[i];
    }
    return sum;
}

int main() {
    int a1[3] = {2, 0, 2};
    float a2[3] = {1.2, 2.2, 1.4};
    double a3[3] = {10.5, 20.5, 30.5};

    cout << "Sum of integer array is: " << func(a1, 3) << endl;
    cout << "Sum of float array is: " << func(a2, 3) << endl;
    cout << "Sum of double array is: " << func(a3, 3) << endl;

    return 0;
}
output
Sum of integer array is: 4
Sum of float array is: 4.8
Sum of double array is: 61.5
