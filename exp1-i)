#include <iostream>
using namespace std;

class student {
    int rollno;
    string name;

public:
    void accept() {
        cout << "Enter value of roll & name: ";
        cin >> rollno >> name;
    }

    void display() {
        cout << "Roll no: " << rollno << ", Name: " << name << endl;
    }
};

int main() {
    student s1;
    s1.accept();
    s1.display();
    return 0;
}
output
Enter value of roll & name: 53 Anushka
Roll no: 53, Name: Anushka
